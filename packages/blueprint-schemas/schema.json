{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchiFlow Blueprint",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string"
    },
    "theme": {
      "type": "string",
      "enum": [
        "dark-pro",
        "light"
      ]
    },
    "screens": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "canvas2d",
              "form",
              "list"
            ]
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "options": {
            "type": "object"
          }
        },
        "required": [
          "id",
          "type"
        ]
      }
    },
    "export": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "appName",
    "screens"
  ]
}